<%- include('components/layout_sup') %>

    <div class="container py-4">
        <div class="row">
            <div class="col">
                <h2 class="mb-3">Menu</h2>
                <div class="d-flex justify-content-end">
                    <form action="/edit" method="get">
                        <button type="submit" class="btn btn-warning">
                            Editar menu
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col">
                <h2 class="mb-3">Temas(s)</h2>

                <% if(final_verification) { %>
                    <h4>sem temas!</h4>
                    <% } else {%>
                        <% themes_foreach.forEach(db_theme=> { %>
                            <% if(db_theme.is_deleted==false) { %>
                                <div class="card mb-4 shadow-sm">
                                    <div class="card-body">
                                        <h4 class="card-title">
                                            <%= db_theme.title %>
                                        </h4>
                                        <div class="d-flex justify-content-end gap-2">
                                            <form action="/theme/edit/<%= db_theme.id %>" method="get">
                                                <button type="submit" class="btn btn-warning">
                                                    Editar
                                                </button>
                                            </form>
                                            <form action="/theme/destroy/<%= db_theme.id %>" method="post">
                                                <button type="submit" class="btn btn-danger">
                                                    Excluir
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                                    <% }) %>
                                        <% } %>
            </div>
        </div>
    </div>

    <%- include('components/layout_inf') %>