<%- include('components/layout_sup') %>

<style>
    body {
        background-color: #f4f7fc; /* Fundo suave */
        color: #2c3e50; /* Texto escuro, suave */
        font-family: 'Arial', sans-serif; /* Fonte clean */
        margin: 0;
        padding: 0;
    }

    h2 {
        color: #343a40; /* Título em um tom de cinza escuro */
        font-weight: bold; /* Deixa o título mais imponente */
    }

    .card {
        border-radius: 12px; /* Bordas mais arredondadas */
        border: none;
        background-color: #ffffff; /* Fundo branco e clean */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Sombra suave para o card */
        transition: box-shadow 0.3s ease; /* Transição suave para hover */
    }

    .card:hover {
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2); /* Aumento da sombra no hover */
    }

    .card-body {
        padding: 20px;
        font-size: 16px;
    }

    .btn {
        border-radius: 30px; /* Botões arredondados */
        padding: 12px 30px; /* Tamanho confortável para os botões */
        font-size: 16px;
        transition: transform 0.3s ease, box-shadow 0.3s ease; /* Transição suave para hover */
    }

    .btn-warning {
        background-color: #f39c12; /* Cor de fundo suave */
        border: none;
        color: white;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Sombra suave */
    }

    .btn-warning:hover {
        background-color: #e67e22; /* Cor mais forte no hover */
        transform: scale(1.05); /* Aumento suave no hover */
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2); /* Aumento da sombra no hover */
    }

    .btn-danger {
        background-color: #e74c3c; /* Cor de fundo suave para excluir */
        border: none;
        color: white;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Sombra suave */
    }

    .btn-danger:hover {
        background-color: #c0392b; /* Cor mais forte no hover */
        transform: scale(1.05); /* Aumento suave no hover */
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2); /* Aumento da sombra no hover */
    }

    .container {
        padding: 30px;
    }

    .mb-3 {
        margin-bottom: 1.5rem !important;
    }

    .mt-5 {
        margin-top: 3rem !important;
    }

    .d-flex {
        display: flex;
    }

    .justify-content-end {
        justify-content: flex-end;
    }

    .gap-2 {
        gap: 0.5rem; /* Espaçamento entre os botões */
    }

    .shadow-sm {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05); /* Sombra suave para cards */
    }

</style>

<div class="container py-4">
    <div class="row">
        <div class="col">
            <h2 class="mb-3">Menu</h2>
            <div class="d-flex justify-content-end">
                <form action="/edit" method="get">
                    <button type="submit" class="btn btn-warning">
                        Editar menu
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col">
            <h2 class="mb-3">Temas(s)</h2>

            <% if(final_verification) { %>
                <h4>sem temas!</h4>
            <% } else {%>
            <% themes_foreach.forEach(db_theme => { %>
                <% if(db_theme.is_deleted == false) { %>
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h4 class="card-title"><%= db_theme.title %></h4>
                        <div class="d-flex justify-content-end gap-2">
                            <form action="/theme/edit/<%= db_theme.id %>" method="get">
                                <button type="submit" class="btn btn-warning">
                                    Editar
                                </button>
                            </form>
                            <form action="/theme/destroy/<%= db_theme.id %>" method="post">
                                <button type="submit" class="btn btn-danger">
                                    Excluir
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                <% } %>
            <% }) %>
            <% } %>
        </div>
    </div>
</div>

<%- include('components/layout_inf') %>
