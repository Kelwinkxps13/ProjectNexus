<%- include('../components/layout_sup') %>

<div class="mt-5">
    <div class="row">
        <!-- About Section -->
        <div class="col-12 mb-5">
            <h2 class="text-info fw-bold">Sobre <%= db_url.title %></h2>
            <p class="text-light fs-4">
                <%= db_url.long_description.about.text %>
            </p>
        </div>

        <!-- For Me Section -->
        <div class="col-12">
            <h2 class="text-info fw-bold">O que <%= db_url.title %> significa para mim</h2>
            <p class="text-light fs-4">
                <%= db_url.long_description.for_me.text %>
            </p>
        </div>
    </div>
</div>



<!-- forma padrao de um bloco, com titulo, texto e imagem -->
<!-- ideia do leandro: ir alternando onde a imagem fica, uma vez na esquerda, outra na direita -->
<div class="container-fluid">
    <% db.url_long_description.forEach( f => { %>

        <% if(f.image === 0 || f.image === '') { %>
            <div class="row">
                <div class="col">
                    <h3 class="text-center"><$= f.title %></h3>
                    <p class="text-center"> <%= f.text %></p>
                </div>
            </div>
        <% } else { %>
            <div class="row">
                <div class="col-9">
                    <div class="col">
                        <h3 class="text-center"><$= f.title %></h3>
                        <p class="text-center"> <%= f.text %></p>
                    </div>
                </div>
                <div class="col-3">
                    <div class="d-flex align-items-center justify-content-center bg-primary"
                        style="width: 286px; height: 286px; overflow: hidden;">
                        <img src="<%= f.image %>" alt="Profile"
                        style="width: 100%; height: 100%; object-fit: cover;">
                    </div>
                </div>
            </div>
        <% } %>


    
    <% }); %>

    <!-- "long_description": {
        block_1: {
            title: 
            text: 
            image: 
        }
      }, -->
</div>

<!-- adicionar novo bloco -->
<div class="row mt-4">
    <div class="col">
        <form action="/createblock" method="get">
            <button type="submit" class="btn btn-outline-primary float-end">
                Adicionar Novo Bloco
            </button>
        </form>
    </div>
</div>

