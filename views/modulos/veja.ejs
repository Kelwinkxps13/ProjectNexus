<%- include('../components/layout_sup') %>

<!-- forma padrao de um bloco, com titulo, texto e imagem -->
<!-- ideia do leandro: ir alternando onde a imagem fica, uma vez na esquerda, outra na direita -->
<div class="container-fluid my-4">


    <% if (is_deleted == total ) { %>

        <h2 class="text-center text-dark"> NÃ£o tem nenhum bloco? adicione algum!</h2>

        <div class="row mt-4">
            <div class="col">
                <form action="/<%= url %>/createblock/<%= id %>" method="get">
                    <button type="submit" class="btn btn-outline-primary float-end">
                        Adicionar Novo Bloco
                    </button>
                </form>
            </div>
        </div>

    <% } else { %>

        <% db_url.forEach( f => { %>
            <% if(f.is_deleted === false) { %>

                <% if(f.image === null ) { %>
                    <div class="row">
                        <div class="col">
                            <h2 class="text-center text-dark">
                                <%= f.title %>
                            </h2>
                            <p class="text-center text-dark">
                                <%= f.description %>
                            </p>
                        </div>
                        <div class="row mt-4">
                            <div class="col d-flex gap-2">
                                <form action="/<%= url %>/editblock/<%= id %>/<%= f.id %>" method="get">
                                    <button type="submit" class="btn btn-warning">Editar</button>
                                </form>
                                <form action="/<%= url %>/destroyblock/<%= id %>/<%= f.id %>" method="post">
                                    <button type="submit" class="btn btn-danger">Excluir</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% } else { %>
                    <div class="row">
                        <div class="col-9">
                            <div class="col">
                                <h2 class="text-center text-dark">
                                    <%= f.title %>
                                </h2>
                                <p class="text-center text-dark">
                                    <%= f.description %>
                                </p>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="d-flex align-items-center justify-content-center bg-light"
                                style="width: 286px; height: 286px; overflow: hidden;">
                                <img src="<%= f.image %>" alt="Profile"
                                    style="width: 100%; height: 100%; object-fit: cover;">
                            </div>
                        </div>
                        <!-- editar bloco -->
                        <div class="row mt-4">
                            <div class="col d-flex gap-2">
                                <form action="/<%= url %>/editblock/<%= id %>/<%= f.id %>" method="get">
                                    <button type="submit" class="btn btn-warning">Editar</button>
                                </form>
                                <form action="/<%= url %>/destroyblock/<%= id %>/<%= f.id %>" method="post">
                                    <button type="submit" class="btn btn-danger">Excluir</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% } %>
            <% } %>
        <% }); %>
<!-- adicionar novo bloco -->
<div class="row mt-4">
    <div class="col">
        <form action="/<%= url %>/createblock/<%= id %>" method="get">
            <button type="submit" class="btn btn-outline-primary float-end">
                Adicionar Novo Bloco
            </button>
        </form>
    </div>
</div>
    <% } %>

    

